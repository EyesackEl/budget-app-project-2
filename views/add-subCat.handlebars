<main class = "container container-fluid mt-5" id="smallMain">
    <h2 id='homeAddTxt' class="text-center">Add a SubCategory to <strong>{{category.name}}</strong></h2>

    <form class = "row justify-content-center">
        <div class="form-group col-lg-6">
            <input id="newSub" type="text" class="form-control" placeholder="Category Name" aria-label="Category Name">
        </div>
    </form>
    <div class="text-center">
        <button id="subCatButton" type="button" class="btn btn-success mt-2">Add!</button>
    </div>

    <script src="/js/subcategory.js"></script>
</main>